generator client {
  provider   = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
}

model Message {
  id          String    @id @default(uuid())
  fromUserId  String
  toUserId    String
  type        String
  content     String?
  payload     Json?
  sentAt      DateTime  @default(now())
  deliveredAt DateTime?

  @@index([fromUserId, toUserId, sentAt])
  @@index([toUserId, deliveredAt])
}

